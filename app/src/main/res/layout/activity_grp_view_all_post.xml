                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    >
                </View>

                <View
                    android:background="@color/blue"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    >
                </View>

            </LinearLayout>

            <LinearLayout
