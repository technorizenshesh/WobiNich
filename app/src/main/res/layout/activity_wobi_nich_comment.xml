<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        >
        
        <RelativeLayout
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:tint="@color/blue"
                    android:src="@drawable/back"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    tools:ignore="UseAppTint">

                </ImageView>

            </RelativeLayout>

            <ImageView
                android:scaleType="fitXY"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/login_logo"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_50sdp"
                >
            </ImageView>

            <ImageView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                >
            </ImageView>

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/llmdg"
            android:layout_below="@id/RRtoolbar"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/RRview"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:background="@color/lightblue"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                >
            </View>

            <View
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                >
            </View>

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_below="@+id/llmdg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:src="@drawable/free_img2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                />

            <TextView
                android:textSize="@dimen/_10sdp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras ullamcorper lectus nullam vel. Mauris sit non arcu massa est nulla sit. Sollicitudin ultricies quis tempor volutpat dictum. Rutrum donec iaculis magna ultrices vestibulum. Eu sollicitudin ipsum bibendum at sit sed bibendum. Egestas ac mauris leo massa sed ac purus. Sem risus elit pellentesque gravida eu facilisi arcu. Mattis nulla fames amet arcu eu aliquam. Nec mauris, metus, condimentum dignissim curabitur. Nibh felis, pulvinar eget nullam malesuada quam. Nulla feugiat mauris, sit vitae eget ultrices dui, lacus ornare. Sed."
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/RR_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/LLADD"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/img" />

                    <ImageView
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/attachment" />

                </LinearLayout>

                <RelativeLayout
                    android:elevation="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/LLSend"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/LLADD"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_etd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <EditText
                        android:textColor="@color/black"
                        android:paddingLeft="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Hello..!"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:background="@null"
                        android:singleLine="true"
                        android:textColorHint="@color/natural_gray"
                        android:textSize="@dimen/_14sdp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/LLSend"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/send" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/google"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    >
                </ImageView>

                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    >
                </ImageView>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>
