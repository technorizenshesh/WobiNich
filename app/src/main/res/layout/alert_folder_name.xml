<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            android:text="Folder Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </TextView>

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/LL_user_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:background="@drawable/red_outline"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgFully"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />


            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_image"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imgCamrera"
                    android:tint="@color/blue"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/redcamera"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/txtCamrera"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Your Pic"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/border_etd_gray"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <EditText
                android:id="@+id/edtName"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Folder Name"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:background="@null"
                android:singleLine="true"
                android:textColorHint="@color/natural_gray"
                android:textSize="@dimen/_14sdp"
                />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/RRcancel"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            >

            <TextView
                android:id="@+id/txtCancel"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp"
                android:text="CANCEL"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
            <View
                android:background="@color/natural_gray"
                android:layout_width="1sp"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:id="@+id/txtSave"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp"
                android:text="ADD"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
