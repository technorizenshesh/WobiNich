<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_searchBtn"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/bg_color"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/RRimgLeftMenu"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImgIcon"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/user_default"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/natural_gray"/>

            <RelativeLayout
                android:background="@drawable/border_btn_yellow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/txtCount"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="0"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/grp_icon"
            />

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/txtGrpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:text="My Family"
            android:textColor="@color/black"
            />

    </LinearLayout>

</RelativeLayout>