<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        android:layout_margin="@dimen/_4sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/itemLeft"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_date"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_25sdp"
            android:elevation="@dimen/_10sdp"
           >

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layoutUserLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUserLeft"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/tvNameUserLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="jhone"
                    android:textColor="#D36044"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvTimeUserLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="(10:02)"
                    android:textColor="#D36044"
                    android:textFontWeight="200"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>

            <TextView
                android:background="@drawable/border_btn"
                android:id="@+id/messageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutUserLeft"
                android:layout_centerVertical="true"
                android:textFontWeight="400"
                android:elevation="@dimen/_3sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Hello User."
                android:textColor="#444540"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemLeft"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_25sdp"
            android:elevation="@dimen/_10sdp"
            android:gravity="end"
            >



            <LinearLayout
                android:background="@drawable/border_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layoutUserRight"
                android:layout_alignParentEnd="true"
                android:elevation="@dimen/_3sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp">

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/messageRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Hello Harshit "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>
